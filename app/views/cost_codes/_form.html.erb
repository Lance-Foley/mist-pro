<%= form_with(model: cost_code) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :id_number %>
    <%= form.text_field :id_number, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), cost_codes_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), cost_code_path(@cost_code), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
