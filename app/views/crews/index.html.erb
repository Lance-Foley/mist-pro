<h1>Crews</h1>

<%= link_to "New Crew", new_crew_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crews.each do |crew| %>
      <tr>
        <td><%= crew.name %></td>
        <td><%= link_to "Show", crew %></td>
        <td><%= link_to "Edit", edit_crew_path(crew) %></td>
        <td><%= link_to "Delete", crew, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

