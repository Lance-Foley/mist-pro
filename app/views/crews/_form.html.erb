<%= form_with(model: crew) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :division_id %>
    <%= form.collection_select :division_id, @divisions, :id, :name, prompt: "Select a division" %>
  </div>

  <div class="form-group">
    <%= form.label :leader_id %>
    <%= form.number_field :leader_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), crews_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), crew_path(@crew), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
