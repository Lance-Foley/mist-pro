<%= content_for :title, "Clients" %>
<%= turbo_stream_from :clients %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Clients</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
        <%= sortable @clients, :name, "Name", class: "text-gray-700 mr-1" %>
        <%= sortable @clients, :email, "Email", class: "text-gray-700 mr-1" %>
        <%= sortable @clients, :business_phone, "Business phone", class: "text-gray-700 mr-1" %>
        <%= sortable @clients, :cell_phone, "Cell phone", class: "text-gray-700 mr-1" %>
        <%= sortable @clients, :secondary_name, "Secondary name", class: "text-gray-700 mr-1" %>
        <%= sortable @clients, :secondary_email, "Secondary email", class: "text-gray-700 mr-1" %>
        <%= sortable @clients, :secondary_business_phone, "Secondary business phone", class: "text-gray-700 mr-1" %>
        <%= sortable @clients, :secondary_cell_phone, "Secondary cell phone", class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Client"), new_client_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("clients" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "clients/index", collection: @clients, as: :client, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Client</p>
        <%= link_to t("shared.scaffold.new.title", model: "Client"), new_client_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
