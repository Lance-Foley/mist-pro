<%= form_with(model: client) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :business_phone %>
    <%= form.text_field :business_phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cell_phone %>
    <%= form.text_field :cell_phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :secondary_name %>
    <%= form.text_field :secondary_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :secondary_email %>
    <%= form.text_field :secondary_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :secondary_business_phone %>
    <%= form.text_field :secondary_business_phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :secondary_cell_phone %>
    <%= form.text_field :secondary_cell_phone, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), clients_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), client_path(@client), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
