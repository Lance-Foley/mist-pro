<%= content_for :title, "Divisions ##{@division.id}" %>
<%= turbo_stream_from @division %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Divisions", divisions_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Division #<%= @division.id %>
    </h1>
    <%= link_to t("edit"), edit_division_path(@division), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @division %>
  </div>
</div>
