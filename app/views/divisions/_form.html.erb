<%= form_with(model: division) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :utlization_rate %>
    <%= form.text_field :utlization_rate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :overtime_rate %>
    <%= form.text_field :overtime_rate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :overtime_after %>
    <%= form.text_field :overtime_after, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), divisions_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), division_path(@division), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
