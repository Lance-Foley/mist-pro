<%= form_with(model: temp_employee) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :override_hours %>
    <%= form.text_field :override_hours, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :override_type %>
    <%= form.text_field :override_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :temp_crew_id %>
    <%= form.text_field :temp_crew_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :employee_id %>
    <%= form.text_field :employee_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :job_id %>
    <%= form.text_field :job_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), temp_employees_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), temp_employee_path(@temp_employee), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
