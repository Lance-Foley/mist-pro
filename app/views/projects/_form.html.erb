<%= form_with(model: project) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :type %>
    <%= form.text_field :type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cost %>
    <%= form.text_field :cost, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :amount_down %>
    <%= form.text_field :amount_down, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :amount_down_date %>
    <%= form.date_field :amount_down_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :amount_with_held %>
    <%= form.text_field :amount_with_held, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :amount_with_held_date %>
    <%= form.date_field :amount_with_held_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :contact_info %>
    <%= form.text_area :contact_info, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.check_box :status, class: "form-checkbox" %>
  </div>

  <div class="form-group">
    <%= form.label :client_id %>
    <%= form.text_field :client_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), projects_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), project_path(@project), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
