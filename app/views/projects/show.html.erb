<%= content_for :title, "Projects ##{@project.id}" %>
<%= turbo_stream_from @project %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to @project.client.name, client_path(@project.client), class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Project #<%= @project.id %>
    </h1>
    <%= link_to t("edit"), edit_project_path(@project), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @project %>
  </div>
  <%= render 'jobs/form', project: @project, job: Job.new %>

</div>
